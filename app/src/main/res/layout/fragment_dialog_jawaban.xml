<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_lyt"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#458200"
    tools:context=".view.latihan.DialogFragmentJawaban">
    <LinearLayout
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/img_emot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_sentiment_satisfied_alt_24"></ImageView>
        <TextView
            android:id="@+id/txt_detail"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Benar!" />
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_lanjutkan_soal"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/white"
        android:text="Lanjutkan"
        android:textColor="#458200"
        android:textSize="14sp"
        app:cornerRadius="10dp" />

</LinearLayout>