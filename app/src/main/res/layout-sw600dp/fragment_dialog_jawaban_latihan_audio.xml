<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cr_ly_audio"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/warna_hijau_tua"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.latihan.DialogFragmentJawabanLatihanAudio">

    <LinearLayout
        android:id="@+id/lr_lyt_audio"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/img_emot_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_sentiment_satisfied_alt_24"></ImageView>
        <TextView
            android:id="@+id/txt_detail_audio"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Benar!" />
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_lanjutkan_soal_audio"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/white"
        android:text="Lanjutkan"
        android:textColor="#458200"
        android:textSize="14sp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/lr_lyt_audio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>