<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="0dp" android:bottom="0dp"> <!-- Ganti nilai bottom sesuai keinginan -->
        <shape android:shape="rectangle">
            <solid android:color="@color/warna_hijau_tua" /> <!-- Warna untuk bagian atas -->
        </shape>
    </item>
    <item android:top="100dp" android:bottom="0dp"> <!-- Ganti nilai top sesuai keinginan -->
        <shape android:shape="rectangle">
            <solid android:color="@color/warna_bg" />
            <corners
                android:topRightRadius="25dp"
                android:topLeftRadius="25dp">
            </corners> <!-- Warna untuk bagian bawah -->
        </shape>
    </item>
</layer-list>
